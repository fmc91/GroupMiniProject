@page
@model CovidTrackingApp.Pages.Check_In.CreateModel

@{
    ViewData["Title"] = "Create";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<h1> Create Check-In</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Booking.User" class="control-label"></label>
                <select asp-for="Booking.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label  class="control-label">Venue Name</label>
                <select asp-for="Booking.VenueId" class="form-control" asp-items="ViewBag.VenueId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.ArrivalTime" class="control-label"></label>
                <button id="ArrivalTime" asp-for="Booking.ArrivalTime" class="btn-control">Arrival Time</button>
                <input id="ArrivalTimeHolder" asp-for="Booking.ArrivalTime" class="form-control" />
                <span asp-validation-for="Booking.ArrivalTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.DepartureTime" class="control-label"></label>
                <button id="DepartureTime" asp-for="Booking.DepartureTime" class="btn-control">Get Time</button>
                <input id="DepartureTimeHolder" asp-for="Booking.DepartureTime" class="form-control" />
                <span asp-validation-for="Booking.DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.BookingDate" class="control-label"></label>
                <input asp-for="Booking.BookingDate" class="form-control" />
                <span asp-validation-for="Booking.BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

<script>
    $(
        function () {

            $('#ArrivalTime').click(function () {
                var time = new Date()
                $('#ArrivalTimeHolder').val(time.toLocaleTimeString());
            });

        }
    );

    $(
        function () {

            $('#DepartureTime').click(function () {
                var time = new Date()
                $('#DepartureTimeHolder').val(time.toLocaleTimeString());
            });

        }
    );

</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
