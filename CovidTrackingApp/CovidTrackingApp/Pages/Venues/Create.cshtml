@page
@model CovidTrackingApp.Pages.Venues.CreateModel

@{
    ViewData["Title"] = "Create new venue";
}

<h1>Create New</h1>

<h4>Venue</h4>
<hr />

<div class="col-md-4">
    <form asp-page="create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NewVenue.VenueName" class="control-label"></label>
            <input asp-for="NewVenue.VenueName" class="form-control" />
            <span asp-validation-for="NewVenue.VenueName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewVenue.Capacity" class="control-label"></label>
            <input asp-for="NewVenue.Capacity" class="form-control" />
            <span asp-validation-for="NewVenue.Capacity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewVenue.Address" class="control-label"></label>
            <input asp-for="NewVenue.Address" class="form-control" />
            <span asp-validation-for="NewVenue.Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewVenue.City" class="control-label"></label>
            <input asp-for="NewVenue.City" class="form-control" />
            <span asp-validation-for="NewVenue.City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewVenue.Postcode" class="control-label"></label>
            <input asp-for="NewVenue.Postcode" class="form-control" />
            <span asp-validation-for="NewVenue.Postcode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewVenue.PhoneNumber" class="control-label"></label>
            <input asp-for="NewVenue.PhoneNumber" class="form-control" />
            <span asp-validation-for="NewVenue.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewVenue.Website" class="control-label"></label>
            <input asp-for="NewVenue.Website" class="form-control" />
            <span asp-validation-for="NewVenue.Website" class="text-danger"></span>
        </div>
        <input type="submit" value="Confirm" class="btn btn-primary my-2"/>
    </form>
    <a asp-page="index">All venues</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
