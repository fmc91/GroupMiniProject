        <div class="form-group">
            <label asp-for="SelectedVenue.Capacity" class="control-label"></label>
            <input asp-for="SelectedVenue.Capacity" class="form-control" />
            <span asp-validation-for="SelectedVenue.Capacity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SelectedVenue.Address" class="control-label"></label>
            <input asp-for="SelectedVenue.Address" class="form-control" />
            <span asp-validation-for="SelectedVenue.Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SelectedVenue.City" class="control-label"></label>
            <input asp-for="SelectedVenue.City" class="form-control" />
