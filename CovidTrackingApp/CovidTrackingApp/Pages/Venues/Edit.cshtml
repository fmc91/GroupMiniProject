            <input asp-for="SelectedVenue.Postcode" class="form-control" />
            <span asp-validation-for="SelectedVenue.Postcode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SelectedVenue.PhoneNumber" class="control-label"></label>
            <input asp-for="SelectedVenue.PhoneNumber" class="form-control" />
            <span asp-validation-for="SelectedVenue.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SelectedVenue.Website" class="control-label"></label>
            <input asp-for="SelectedVenue.Website" class="form-control" />
            <span asp-validation-for="SelectedVenue.Website" class="text-danger"></span>
        </div>
        <div class="form-group my-2">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a role="button" asp-page="index" class="btn btn-outline-secondary">Back</a>
        </div>
    </form>
</div>
